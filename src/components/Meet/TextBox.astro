---

const { girl } = Astro.props

---
<div class="arrow"></div>
<div class="container">
    <h2>{girl.name}, {girl.age} Ã¥r, bor i {girl.town}</h2>
    <div class="content">
        {girl.quotes.map((quote) =>{
            return <article><p>{quote}</p></article>
        })}
    </div>    
</div>

<style>

    .arrow {
        background-image: url('/public/svg/arrow.svg');
        background-repeat: no-repeat;
        background-position: 50%;
        height: 60px;
    }
    .container {
        background-color: var(--bg-color);
        max-width: 550px;
        border-radius: 1rem;
        padding: 2rem 2.5rem;
    }

    .content {
        max-height: 80px;
        overflow: scroll;      
        scroll-snap-type: y mandatory;
        scroll-behavior: smooth;
    }

    article {        
        scroll-snap-align: start;
        height: 100px;
    }

    p {
        color: var(--text-color);
        font-style: italic;
    }

    @media (min-width: 650px) {
        .container {
            padding: 4rem 6rem;
        }
    }
</style>